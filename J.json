#!/usr/bin/env node
/**
 * generate_image_to_ui_engine.mjs
 * One script. One run. Full feature demo.
 */

import fs from "fs";
import path from "path";

const ROOT = "image-to-ui-engine";
const p = (...a) => path.join(ROOT, ...a);

function dir(d) {
  fs.mkdirSync(d, { recursive: true });
}
function write(file, content) {
  fs.writeFileSync(file, content, "utf8");
  console.log("âœ”", file);
}

/* ---------------- INIT ---------------- */
dir(ROOT);
dir(p("assets"));
dir(p("demo"));
dir(p("scripts"));

/* ---------------- FULL COMBO JSON ---------------- */
write(
  p("assets/everything-ui-combo.json"),
  JSON.stringify(
    {
      version: "1.0.0",
      tokens: {
        color: {
          primary: "#16a7cb",
          bg: "#1b1d20",
          text: "#6b7280"
        },
        radius: { sm: 8, md: 16, lg: 24 },
        shadow: {
          card: "0 20px 60px rgba(0,0,0,0.15)"
        },
        font: {
          ui: "SF Pro Display",
          alt: "Kanit"
        }
      },
      elements: {
        button: {
          variants: ["primary", "ghost"],
          states: ["idle", "hover", "active", "disabled"],
          interaction: ["scale", "glow"]
        },
        card: {
          interaction: ["lift", "shadow"]
        },
        image: {
          interaction: ["hover-zoom", "grayscale-toggle"]
        }
      },
      interaction: {
        hover: ["scale", "shadow"],
